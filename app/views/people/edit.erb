<html>
<head>
  <title>Edit User</title>
</head>
<body>
  <h1>Edit User</h1>

  <% form_for @person, "/people/update/#{@person.id}" do |form|%>

    <%  field_set_tag do %>
        <%= form.label :first_name %>
        <%= form.text_field :first_name %>
    <% end %>

    <%  field_set_tag do %>
        <%= form.label :last_name %>
        <%= form.text_field :last_name %>
    <% end %>
    <%  field_set_tag do %>
        <%= form.label :email %>
        <%= form.text_field :email %>
    <% end %>
    <%  field_set_tag do %>
        <%= form.label :phone %>
        <%= form.text_field :phone %>
    <% end %>
    <%  field_set_tag do %>
        <%= form.label :twitter %>
        <%= form.text_field :twitter %>
    <% end %>
    <%  field_set_tag do %>
        <%= form.label :type %>
        <%= form.select :type, :options => ['Trainee', 'Instructor'] %>
        <a href="/people/edit_type_preferences/<%=@person.id%>" >Edit your Role </a>
    <% end %>
    <%= form.submit 'Save' %>
  <% end %>


  <% form_for @person, "/people/delete" do |form|%>
   <%= form.submit 'Delete User' %>
  <% end %>

</body>
</html>