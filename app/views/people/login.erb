<html>
<head>
  <title>Login</title>
</head>
<body>
  <h1>Login Page</h1>

  <% if flash[:notice] %>
  <%= flash[:notice] %>
  <% end %>

  <% form_tag url_for(:people, :login) do %>

    <% field_set_tag do %>

      <%= label_tag :user_name %>
      <%= text_field_tag :user_name %>
    <% end %>

    <% field_set_tag do %>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    <% end %>
    <% field_set_tag do %>
      <%= submit_tag 'Login' %>
    <% end %>
  <% end %>

  <%= link_to "Sign Up Here", url_for(:people, :sign_up) %>
</body>
</html>